<persistence xmlns = "http://java.sun.com/xml/ns/persistence"
             xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation = "http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence.xml"
             version="2.0">
    <persistence-unit name="PostGres">

        <properties>
            <property name="hibernate.conection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94dialect"/>
            <property name="hibernate.show_sql" value="true"/>

            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/testcar"/>
            <property name="hibernate.connection.username" value="usercar"/>
            <property name="hibernate.connection.password" value="passcar"/>

        </properties>
    </persistence-unit>
</persistence>